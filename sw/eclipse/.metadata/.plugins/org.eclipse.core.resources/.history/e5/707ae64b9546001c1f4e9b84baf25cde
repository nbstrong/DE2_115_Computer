#include "system.h"
#include <stdint.h>
#include <stdio.h>

#define USERINPUT 0

//// Number of repetitions for performance test
#define N (100000)
#define VECLENGTH 5

int euclids_sub(int a, int b);

unsigned int a_vec [VECLENGTH] = {
		91,
		2147483647,
		1,
		1000000000,
		2
};
unsigned int b_vec [VECLENGTH] = {
		21,
		1,
		1,
		1023
};

int main(void) {
    unsigned int a, b = 0;
    volatile unsigned int gcd_ci, gcd_sw = 0;

    for(int i = 0; i < VECLENGTH; i++) {
        // Got tired of inputting numbers, change #define at top
        if(USERINPUT & (i = 0)) {
        printf("\nInput A: ");
        scanf(" %u",&a);
        printf("\nInput B: ");
        scanf(" %u",&b);
        }
        else {
            a = a_vec[i];
            b = b_vec[i];
        }
        printf("\nA: %u", a);
        printf("\nB: %u", b);

        gcd_sw = euclids_sub(a, b);

        gcd_ci = ALT_CI_GCD_CI_0(a, b);

        printf("\nGCD_SW: %x", gcd_sw);
        printf("\nGCD_CI: %x", gcd_ci);

    }
}

int euclids_sub(int a, int b)
{
    if (a == b) {
        return a;}
    if (a > b) {
        return euclids_sub((a-b), b);}
    else {
        return euclids_sub(a, (b-a));}
}



